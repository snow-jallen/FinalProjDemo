<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WeatherApp.Mobile.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WeatherApp.Mobile"
       xmlns:views="clr-namespace:WeatherApp.Mobile.Views"
       Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <VerticalStackLayout BackgroundColor="CadetBlue" Padding="15">
            <Label Text="Final Project Demo" FontSize="Header" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />

    <ShellContent Title="Entry Form"
                  ContentTemplate="{DataTemplate views:EntryPage}"
                  Route="EntryPage" />

</Shell>
